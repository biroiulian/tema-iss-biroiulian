<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane minHeight="427.0" minWidth="626.0" prefHeight="427.0" prefWidth="639.0" styleClass="bodybg" stylesheets="@background.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="iss.biblioteca.RegisterController">
    <bottom>
        <HBox BorderPane.alignment="CENTER" />
    </bottom>
   <left>
        <VBox minHeight="300.0" minWidth="376.0" prefHeight="427.0" prefWidth="376.0" spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="visible-text" text="Register">
                    <font>
                        <Font name="System Bold Italic" size="32.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin></Text>
                <TextField fx:id="UsernameTextField" maxHeight="25.0" maxWidth="200.0" prefHeight="26.0" prefWidth="300.0" promptText="username" />
                <PasswordField fx:id="PasswordTextField" maxHeight="80.0" maxWidth="200.0" prefHeight="25.0" prefWidth="300.0" promptText="password">
               <VBox.margin>
                  <Insets top="7.0" />
               </VBox.margin></PasswordField>
            <TextField fx:id="NameTextField" maxHeight="26.0" maxWidth="200.0" prefHeight="26.0" prefWidth="200.0" promptText="name">
               <VBox.margin>
                  <Insets top="7.0" />
               </VBox.margin>
            </TextField>
                <TextField fx:id="AgeTextField" maxHeight="26.0" maxWidth="200.0" prefHeight="26.0" prefWidth="200.0" promptText="age">
               <VBox.margin>
                  <Insets top="7.0" />
               </VBox.margin></TextField>
            <TextField fx:id="CnpTextField" maxHeight="26.0" maxWidth="200.0" prefHeight="26.0" prefWidth="200.0" promptText="cnp">
               <VBox.margin>
                  <Insets top="7.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="AdressTextField" maxHeight="26.0" maxWidth="200.0" prefHeight="26.0" prefWidth="200.0" promptText="adress">
               <VBox.margin>
                  <Insets top="7.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="PhoneTextField" maxHeight="26.0" maxWidth="200.0" prefHeight="26.0" prefWidth="200.0" promptText="phone">
               <VBox.margin>
                  <Insets top="7.0" />
               </VBox.margin>
            </TextField>
                <HBox prefHeight="39.0" prefWidth="345.0" spacing="10.0">
                    <children>
                        <Button fx:id="RegisterButton" mnemonicParsing="false" onAction="#onRegisterButtonClicked" styleClass="custom-button" text="REGISTER" />
                        <Button fx:id="BackToLoginButton" mnemonicParsing="false" onAction="#onBackToLoginButtonClicked" prefHeight="39.0" prefWidth="118.0" styleClass="custom-button" text="Back to Login" />
                    </children>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets bottom="30.0" left="40.0" right="90.0" top="30.0" />
            </padding>
         <stylesheets>
            <URL value="@text.css" />
            <URL value="@background.css" />
            <URL value="@buttons.css" />
         </stylesheets>
        </VBox>
   </left>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Text fx:id="StatusText" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0">
               <VBox.margin>
                  <Insets top="200.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Text>
         </children>
      </VBox>
   </center>
</BorderPane>
